<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/appBackgroundColor"
    android:paddingTop="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="@dimen/right_padding_for_buttons"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/productNameTextView"
        tools:text="Cucumber"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_below="@+id/productNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/caloriesTextView"
            tools:text="120 kcal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/proteinsTextView"
            tools:text="P: 10g"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/carbonsTextView"
            tools:text="C: 10g"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/fatTextView"
            tools:text="F: 10g"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <ImageButton
        android:id="@+id/updateProductImageButton"
        android:layout_marginTop="7dp"
        android:layout_toLeftOf="@+id/deleteProductImageButton"
        android:layout_toStartOf="@+id/deleteProductImageButton"
        android:src="@drawable/ic_edit"
        style="@style/buttonStyle"
        android:layout_marginRight="@dimen/right_padding_for_buttons" />

    <ImageButton
        android:id="@+id/deleteProductImageButton"
        android:layout_marginTop="7dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_delete_button_without_bckgrnd"
        style="@style/buttonStyle" />

</RelativeLayout>