<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/appBackgroundColor"
    android:paddingTop="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="@dimen/right_padding_for_buttons"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/mealToAddNameTextView"
        tools:text="Spaghetti"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/mealToAddCaloriesTextView"
        android:layout_below="@+id/mealToAddNameTextView"
        tools:text="120 kcal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/addMealToDailyMenuImageButton"
        android:layout_marginTop="3dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_add"
        style="@style/buttonStyle" />


</RelativeLayout>