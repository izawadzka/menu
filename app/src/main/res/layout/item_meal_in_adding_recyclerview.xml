<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/appBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:id="@+id/contentRelativeLayout"
    android:paddingTop="5dp"
    android:paddingLeft="10dp"
    android:paddingStart="10dp"
    android:paddingRight="@dimen/right_padding_for_buttons"
    android:paddingEnd="@dimen/right_padding_for_buttons"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/mealToAddNameTextView"
        tools:text="Spaghetti"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_below="@+id/mealToAddNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/mealToAddCaloriesTextView"
            tools:text="120 kcal"
            android:paddingRight="5dp"
            android:paddingEnd="5dp"
            android:paddingLeft="0dp"
            android:paddingStart="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/proteinsTextView"
            tools:text="P: 10g"
            android:paddingLeft="@dimen/text_padding_in_recyclerView"
            android:paddingStart="@dimen/text_padding_in_recyclerView"
            android:paddingRight="@dimen/text_padding_in_recyclerView"
            android:paddingEnd="@dimen/text_padding_in_recyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/carbonsTextView"
            tools:text="C: 10g"
            android:paddingLeft="@dimen/text_padding_in_recyclerView"
            android:paddingStart="@dimen/text_padding_in_recyclerView"
            android:paddingRight="@dimen/text_padding_in_recyclerView"
            android:paddingEnd="@dimen/text_padding_in_recyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/fatTextView"
            tools:text="F: 10g"
            android:paddingLeft="@dimen/text_padding_in_recyclerView"
            android:paddingStart="@dimen/text_padding_in_recyclerView"
            android:paddingRight="@dimen/text_padding_in_recyclerView"
            android:paddingEnd="@dimen/text_padding_in_recyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <ImageButton
        android:id="@+id/addMealToDailyMenuImageButton"
        android:contentDescription="@string/add_meal_to_daily_menu"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_add"
        style="@style/buttonStyle" />
</RelativeLayout>

    <View
        android:id="@+id/border"
        android:layout_below="@+id/contentRelativeLayout"
        android:background="@color/contrastAdapterColor"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
</RelativeLayout>