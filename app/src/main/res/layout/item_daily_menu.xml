<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingLeft="5dp"
    android:paddingBottom="5dp"
    android:paddingRight="5dp"
    android:background="@color/appBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/day_record_number"
        tool:text="Day 1"
        android:paddingTop="5dp"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/dailyMenuDateTextView"
        tool:text="01.05.2017"
        android:layout_below="@+id/day_record_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/deleteDailyMenuImageButton"
        android:src="@drawable/ic_delete_button_without_bckgrnd"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        style="@style/buttonStyle"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"/>

    <ImageButton
        android:id="@+id/editDailyMenuImageButton"
        android:src="@drawable/ic_edit"
        android:layout_marginTop="7dp"
        android:layout_toLeftOf="@+id/deleteDailyMenuImageButton"
        style="@style/buttonStyle" />

</RelativeLayout>