<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dell.menu">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".screens.login.LoginActivity" />
        <activity android:name=".screens.register.RegisterActivity" />
        <activity android:name=".screens.meals.extendedMealInformation.FullMealInformationActivity" />
        <activity android:name=".screens.products.addOrEdit.AddOrEditProductActivity" />
        <activity android:name=".screens.meals.addOrEdit.AddOrEditMealActivity" />
        <activity
            android:name=".screens.meals.addOrEdit.ChooseFromProductsActivity"
            android:parentActivityName=".screens.meals.addOrEdit.AddOrEditMealActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dell.menu.screens.meals.addOrEdit.AddOrEditMealActivity" />
        </activity>
        <activity
            android:name=".screens.menus.addOrEditMenu.AddOrEditMenuActivity"
            android:label="@string/title_activity_add_or_edit_menu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".screens.menus.addOrEditMenu.createNewDailyMenu.CreateNewDailyMenuActivity" />
        <activity
            android:name=".screens.menus.addOrEditMenu.createNewDailyMenu.ChooseFromMealsActivity"
            android:parentActivityName=".screens.menus.addOrEditMenu.createNewDailyMenu.CreateNewDailyMenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dell.menu.screens.menus.addOrEditMenu.createNewDailyMenu.CreateNewDailyMenuActivity" />
        </activity>
        <activity android:name=".screens.shoppingLists.ShowProductsInListActivity"></activity>
    </application>

</manifest>